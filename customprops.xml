<?xml version="1.0" encoding="utf-8"?>
<ProjectSchemaDefinitions  xmlns="http://schemas.microsoft.com/build/2009/properties"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <Rule Name="librw_config" PageTemplate="generic">
    <Rule.DisplayName>
      <sys:String>librw Configuration</sys:String>
    </Rule.DisplayName>
    <Rule.Categories>
      <Category Name="SDKProps">
      <Category.DisplayName>
        <sys:String>SDK Configuration</sys:String>
      </Category.DisplayName>
    </Category>
    </Rule.Categories>
    <Rule.DataSource>
      <DataSource Persistence="UserFile" ItemType=""/>
    </Rule.DataSource>
    <StringProperty Name="LIBRWSDK_PATH" Category="SDKProps" Subtype="folder" IsRequired="true">
      <StringProperty.DisplayName>
        <sys:String>Path to librw SDK</sys:String>
      </StringProperty.DisplayName>
      <StringProperty.Description>
        <sys:String>Specify the path to the librw SDK so that it can be used during compilation.</sys:String>
      </StringProperty.Description>
    </StringProperty>
  </Rule>
</ProjectSchemaDefinitions>